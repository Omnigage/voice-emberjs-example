      <button type="button" class="collapsed navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2" aria-expanded="false"> <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a href="#" class="navbar-brand">Voice Example</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
      <form class="navbar-form navbar-left">
        <div class="form-group">
          {{#power-select
            options=accountContent
            selected=currentAccount
            searchEnabled=false
            searchField="name"
            placeholder="Filter By Account"
            triggerClass="ember-tabular-ember-power-select select-kind"
            onchange=(action (mut currentAccount))
            as |item|}}
              {{item.account.name}}
